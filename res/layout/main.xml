<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    	
    <ListView android:layout_weight="1"
     android:layout_width="match_parent" 
     android:id="@+id/transcript" 
     android:layout_height="wrap_content"
     android:stackFromBottom="true"
     android:transcriptMode="alwaysScroll"
                        />
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dip"
        android:text="@string/robot_voice_command_prompt" android:layout_gravity="bottom"/>
        
    <Button android:id="@+id/btn_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/speak_button" android:layout_gravity="bottom"/>
        
    <ListView android:id="@+id/reco_output"
        android:layout_width="match_parent"
         android:layout_height="wrap_content" android:layout_gravity="bottom"/>
            
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dip"
        android:text="@string/robot_text_command_prompt" android:layout_gravity="bottom"/>
    
    <EditText android:id="@+id/command_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/textinput_prompt" android:layout_gravity="bottom" android:inputType="textNoSuggestions"/>
        
        
    <TextView android:paddingBottom="4dip" android:layout_width="match_parent" android:text="@string/robot_button_command_prompt" android:layout_height="wrap_content" android:layout_gravity="bottom"/>
    
    
    <Button android:text="@string/predefined_commands" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/btn_predefined_actions" android:layout_gravity="bottom"/>
 </LinearLayout>
